<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayTabBackground"
    android:gravity="center"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="40dp">

        <LinearLayout
            android:id="@+id/layoutCrustThick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doughThickTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/image_description_dough_thick"
                android:textSize="@dimen/crustCaptionSize"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/doughThickImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/image_description_dough_thick"
                android:gravity="center"
                app:srcCompat="@drawable/ic_thick_dough" />

        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingBottom="40dp">

        <LinearLayout
            android:id="@+id/layoutCrustRegular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doughRegularTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/image_description_dough_regular"
                android:textSize="@dimen/crustCaptionSize"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/doughRegularImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/image_description_dough_regular"
                app:srcCompat="@drawable/ic_regular_dough" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/layoutCrustThin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/doughThinTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/image_description_dough_thin"
                android:textSize="@dimen/crustCaptionSize"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/doughThinImageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="@string/image_description_dough_thin"
                app:srcCompat="@drawable/ic_thin_dough" />


        </LinearLayout>
    </TableRow>
</TableLayout>