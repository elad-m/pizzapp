<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="30dp"
        android:gravity="center"
        android:text="@string/hello">

    </TextView>



    <RelativeLayout
        android:id="@+id/pizzaPic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:paddingBottom="70dp">


        <FrameLayout
            android:id="@+id/topRightFrame"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/topRight"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_gravity="left|bottom"
                android:contentDescription="@string/topright"
                android:onClick="onClick"
                android:paddingLeft="1.5dp"
                android:paddingBottom="1.5dp"
                app:srcCompat="@drawable/ic_xl_pizza_slice" />

            <ImageView
                android:id="@+id/pizzaPLusTopRight"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left|center|bottom"
                android:layout_marginLeft="15dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/pizza_plus" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottomRightFrame"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_marginLeft="207dp"
            android:layout_marginTop="203dp">

            <ImageView
                android:id="@+id/bottomRight"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_gravity="top|left"
                android:contentDescription="@string/bottomright"
                android:onClick="onClick"
                android:paddingLeft="1.5dp"
                android:paddingTop="1.5dp"
                android:rotation="90"
                app:srcCompat="@drawable/ic_xl_pizza_slice" />

            <ImageView
                android:id="@+id/pizzaPLusBottomRight"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left|center|top"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/pizza_plus" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/bottomLeftFrame"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="203dp">


            <ImageView
                android:id="@+id/bottomLeft"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_gravity="top|right"
                android:contentDescription="@string/bottomleft"
                android:onClick="onClick"
                android:paddingTop="1.5dp"
                android:paddingRight="1.5dp"
                android:rotation="180"
                app:srcCompat="@drawable/ic_xl_pizza_slice" />

            <ImageView
                android:id="@+id/pizzaPLusBottomleft"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center|top"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                app:srcCompat="@drawable/pizza_plus" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/topLeftFrame"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp">

            <ImageView
                android:id="@+id/topLeft"
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_gravity="bottom|right"
                android:contentDescription="topLeft"
                android:onClick="onClick"
                android:paddingRight="1.5dp"
                android:paddingBottom="1.5dp"
                android:rotation="270"
                app:srcCompat="@drawable/ic_xl_pizza_slice" />

            <ImageView
                android:id="@+id/pizzaPLusTopleft"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center|bottom"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/pizza_plus" />
        </FrameLayout>


    </RelativeLayout>

</RelativeLayout>